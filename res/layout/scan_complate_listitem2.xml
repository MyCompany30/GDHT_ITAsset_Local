<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6fafd" 
    >
    
    	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    >
	    <CheckBox
            android:id="@+id/chkBox"
            style="@drawable/pandian_checkbox_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />
	            <TextView
            android:id="@+id/rfid_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chkBox"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/chkBox"
            android:text="RFID标签编号："
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chkBox"
            android:layout_toRightOf="@+id/rfid_"
            android:text="adfasdfe123e12e32fd1"
            android:textColor="#ef8200"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/pointBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/point_down"
            />
	</RelativeLayout>

</LinearLayout>
